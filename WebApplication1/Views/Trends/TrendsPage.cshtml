@model IEnumerable<WebApplication1.Models.Product>
@{
    ViewData["Title"] = "В Тренді";
}

<div class="text-center">
    <h2 class="text-center mb-3">Трендові товари</h2>
    <div class="row">
        <div class="article-divider mb-3"></div>
        <div class="col-12">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card" style="height:392.4px">
                            <img src=@item.ImgUrl class="card-img-top" style="max-height: 200px;" alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <h6 class="card-subtitle">@item.Price</h6>
                                <p class="card-text">@item.Material</p>
                                <a class="btn btn-success" role="button" asp-controller="Catalog" asp-action="DetailPage" asp-route-id="@item.ProductId">Подивитися</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>