@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Edit Page";
}

<div class="text-center">
    <form class="form-group" asp-controller="Admin" asp-action="EditProduct" method="post">

        <input type="hidden" asp-for="ProductId" value="@Model.ProductId">
        <input type="hidden" asp-for="Comments" value="@Model.Comments">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Name">Product Name: </label>
            <div>
                <input class="form-control" asp-for="Name" value="@Model.Name" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Price">Price: </label>
            <div>
                <input class="form-control" asp-for="Price" value="@Model.Price" />
                <span asp-validation-for="Price"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="ImgUrl">Picture Name: </label>
            <div>
                <input type="file" class="form-control-file" asp-for="ImgUrl">
                <span asp-validation-for="ImgUrl"></span>
            </div>

        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Material">Material: </label>
            <div>
                <textarea class="form-control" rows="8" asp-for="Material" value="@Model.Material"></textarea>
                <span asp-validation-for="Material"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Description">Description: </label>
            <div>
                <textarea class="form-control" rows="8" asp-for="Description" value="@Model.Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="CategoryId">Categoty: </label>
            <div>
                <select class="form-control form-control-lg" asp-for="CategoryId" id="CategoryId">
                    @if (Model.CategoryId == 1)
                    {
                        <option value="1" selected="selected">Cat</option>
                        <option value="2">Dog</option>
                        <option value="3">Aquatic</option>
                    }
                    else if (Model.CategoryId == 2)
                    {
                        <option value="1">Cat</option>
                        <option value="2" selected="selected">Dog</option>
                        <option value="3">Aquatic</option>
                    }
                    else
                    {
                        <option value="1">Cat</option>
                        <option value="2">Dog</option>
                        <option value="3" selected="selected">Aquatic</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="CategoryId">Categoty: </label>
            <div>
                <select class="form-control form-control-lg" asp-for="CategoryId" id="CategoryId">
                    @if (Model.CategoryId == 1)
                    {
                        <option value="1" selected="selected">Нашийники</option>
                        <option value="2">Шлеї</option>
                        <option value="3">Повідці</option>
                        <option value="4">Повідці-рулетки</option>
                        <option value="5">Одяг</option>
                        <option value="6">Іграшки</option>
                    }
                    else if (Model.CategoryId == 2)
                    {
                        <option value="1">Нашийники</option>
                        <option value="2" selected="selected">Шлеї</option>
                        <option value="3">Повідці</option>
                        <option value="4">Повідці-рулетки</option>
                        <option value="5">Одяг</option>
                        <option value="6">Іграшки</option>
                    }
                    else if (Model.CategoryId == 3)
                    {
                        <option value="1">Нашийники</option>
                        <option value="2">Шлеї</option>
                        <option value="3" selected="selected">Повідці</option>
                        <option value="4">Повідці-рулетки</option>
                        <option value="5">Одяг</option>
                        <option value="6">Іграшки</option>
                    }
                    else if (Model.CategoryId == 4)
                    {
                        <option value="1">Нашийники</option>
                        <option value="2">Шлеї</option>
                        <option value="3">Повідці</option>
                        <option value="4" selected="selected">Повідці-рулетки</option>
                        <option value="5">Одяг</option>
                        <option value="6">Іграшки</option>
                    }
                    else if (Model.CategoryId == 5)
                    {
                        <option value="1">Нашийники</option>
                        <option value="2">Шлеї</option>
                        <option value="3">Повідці</option>
                        <option value="4">Повідці-рулетки</option>
                        <option value="5" selected="selected">Одяг</option>
                        <option value="6">Іграшки</option>
                    }
                    else
                    {
                        <option value="1">Нашийники</option>
                        <option value="2">Шлеї</option>
                        <option value="3">Повідці</option>
                        <option value="4">Повідці-рулетки</option>
                        <option value="5">Одяг</option>
                        <option value="6" selected="selected">Іграшки</option>
                    }
                </select>
            </div>
        </div>
        <button class="btn btn-outline-secondary">Save</button>

    </form>
</div>